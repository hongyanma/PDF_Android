<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logbac"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/img_exit_r"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:src="@drawable/cancellation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="审核订单"
            android:textColor="@color/white"
            android:textSize="25dip" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rel_time_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dip"
        android:orientation="horizontal">

        <com.com.tool.CircleImageView
            android:id="@+id/img_head_r"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_marginTop="15dp"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/tv_time_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:text="早上好!审核员:Tom"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rel_search_r"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rel_time_r"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="25dp"
        android:background="@drawable/radius_drawable_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText1_r"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="4"
            android:background="@drawable/radius_drawable_bg"
            android:hint="请输入订单号"
            android:singleLine="true"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/search_r"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/editText1_r"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="搜索"
            android:textSize="16dp" />
    </LinearLayout>


    <ListView
        android:id="@+id/listview_his"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/rel_search_r"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:dividerHeight="0dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <TextView
        android:id="@+id/Cannot"
        android:layout_marginTop="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/linegray"
        android:textSize="25dp"
        android:visibility="gone"
        android:layout_below="@+id/rel_search_r"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
